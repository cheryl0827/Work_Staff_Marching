<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >
        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCDCDC"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="22dp" />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:background="#A9A9A9"
            android:onClick="deleteClick"
            android:text="del"
            android:textSize="20dp"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/bt_one"
            android:layout_marginLeft="60dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/button_shape"
            android:text="1"
            android:textSize="25dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/bt_two"
            android:layout_width="70dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_shape"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="25dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/bt_three"
            android:layout_width="70dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_shape"
            android:layout_height="70dp"
            android:text="3"
            android:textSize="25dp"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/bt_four"
            android:layout_width="70dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/button_shape"
            android:layout_height="70dp"
            android:text="4"
            android:textSize="25dp"
            android:textColor="#000" />

        <Button
            android:id="@+id/bt_five"
            android:layout_width="70dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_shape"
            android:layout_height="70dp"
            android:text="5"
            android:textSize="25dp"
            android:textColor="#000" />

        <Button
            android:id="@+id/bt_six"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_shape"
            android:text="6"
            android:textSize="25dp"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/bt_seven"
            android:layout_width="70dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/button_shape"
            android:layout_height="70dp"
            android:text="7"
            android:textSize="25dp"
            android:textColor="#000" />

        <Button
            android:id="@+id/bt_eight"
            android:layout_width="70dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_shape"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="25dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/bt_nine"
            android:layout_width="70dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_shape"
            android:layout_height="70dp"
            android:text="9"
            android:textSize="25dp"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/bt_star"
            android:layout_width="70dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/button_shape"
            android:layout_height="70dp"
            android:text="*"
            android:textSize="25dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/bt_zero"
            android:layout_width="70dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_shape"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="25dp"
            android:textColor="#000" />

        <Button
            android:id="@+id/bt_bottom"
            android:layout_width="70dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/button_shape"
            android:layout_height="70dp"
            android:text="#"
            android:textSize="25dp"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/bt_call"
            android:layout_width="70dp"
            android:layout_marginLeft="170dp"
            android:background="@drawable/button_shape"
            android:layout_height="70dp"
            android:text="拨号"
            android:textSize="25dp"
            android:textColor="#000"/>
    </LinearLayout>

</LinearLayout>
