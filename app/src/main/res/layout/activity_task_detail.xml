<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/usernameLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="120dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="上访人姓名:"
            android:textColor="#808080"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/username"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:text=""
            android:textColor="#808080"
            android:textSize="22dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <LinearLayout
        android:id="@+id/indentificationLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/indentificationtext"
            android:layout_width="120dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="身份证号码:"
            android:textColor="#808080"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/indentification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:text=""
            android:textColor="#808080"
            android:textSize="22dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>

    <LinearLayout
        android:id="@+id/catageryLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editText"
            android:layout_width="120dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=" 问题类别:"
            android:textColor="#808080"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/catagery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:text=""
            android:textColor="#808080"
            android:textSize="22dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <LinearLayout
        android:id="@+id/contentLineaeLayout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext1"
            android:layout_marginTop="7dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=" 上访内容:"
            android:textColor="#808080"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/content"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:text=""
            android:textColor="#808080"
            android:textSize="22dp" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_gravity="right"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <LinearLayout
        android:id="@+id/addressLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext"
            android:layout_width="120dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="  事 发 地:"
            android:textColor="#808080"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:textColor="#808080"
            android:textSize="22dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>

    <LinearLayout
        android:id="@+id/addressLayout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adressText"
            android:layout_width="120dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=" 详细地址:"
            android:textColor="#808080"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/aadress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:text=""
            android:textColor="#808080"
            android:textSize="22dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>

    <LinearLayout
    android:id="@+id/timeLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/timeText"
        android:layout_width="120dp"
        android:layout_marginTop="7dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=" 上访时间："
        android:textColor="#808080"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:inputType="textPersonName"
        android:layout_weight="1"
        android:text=""
        android:textColor="#808080"
        android:textSize="22dp" />
</LinearLayout>

<View
android:layout_width="match_parent"
android:layout_height="1dp"
android:background="#DCDCDC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/setbutton"
            android:text="审核通过"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"
            android:textStyle="italic" />
        <Button
            android:id="@+id/nobutton"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@color/wheat"
            android:text="审核不通过"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>

