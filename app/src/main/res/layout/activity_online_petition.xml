<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>


    <LinearLayout
        android:id="@+id/catageryLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/editText"
            android:layout_width="120dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="问题类别"
            android:textColor="#808080"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/catagery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:text=""
            android:textColor="#808080"
            android:textSize="22dp" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_gravity="right"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <LinearLayout
        android:id="@+id/contentLineaeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext1"
            android:layout_marginTop="7dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="上访内容"
            android:textColor="#808080"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/content"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_weight="1"
            android:text=""
            android:textColor="#808080"
            android:textSize="22dp" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_gravity="right"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <LinearLayout
        android:id="@+id/addressLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edittext"
            android:layout_width="120dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="事 发 地"
            android:textColor="#808080"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:textColor="#808080"
            android:textSize="22dp" />
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_gravity="right"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <LinearLayout
        android:id="@+id/detailAdressLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="详细地址"
            android:layout_marginTop="7dp"
            android:textColor="#808080"
            android:textSize="22dp" />
        <EditText
            android:id="@+id/detailAdress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="#808080"
            android:textSize="22dp"
            android:hint="请输入详细地址"
            android:text=""/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/setbutton"
        android:text="下一步"
        android:textSize="20dp"
        android:textStyle="italic" />
</LinearLayout>
