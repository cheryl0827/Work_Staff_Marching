<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#E6E6FA">

    <LinearLayout
        android:id="@+id/usernameLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/username"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textColor="#808080"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="22dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>

    <LinearLayout
        android:id="@+id/indentificationLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:id="@+id/indentification"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="身份证号码："
            android:textColor="#808080"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/indentificationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="22dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <LinearLayout
        android:id="@+id/phoneLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phone"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="原手机号码："
            android:textColor="#808080"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="22dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <LinearLayout
        android:id="@+id/phonechangeLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phonechange"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="新手机号码："
            android:textColor="#808080"
            android:textSize="22dp"/>

        <EditText
            android:id="@+id/phonechangeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="22dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>

    <LinearLayout
        android:id="@+id/addressLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/edittext"
            android:layout_width="140dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="所在地区"
            android:textColor="#808080"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="22dp" />
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/right"
            android:layout_gravity="right"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>

    <LinearLayout
        android:id="@+id/detaiaddressLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detaiaddress1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="街道地区："
            android:textColor="#808080"
            android:textSize="22dp"/>

        <EditText
            android:id="@+id/detaiaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="22dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <Button
        android:id="@+id/register"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="提交"
        android:textStyle="italic"
        android:layout_marginTop="50dp"
        android:textColor="#808080"
        android:textSize="22dp"
        android:background="@color/powderblue"/>




</LinearLayout>
