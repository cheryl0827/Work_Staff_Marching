<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:id="@+id/it1em">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/task_catagery"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="农村农业-土地承包经营-土地流转"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/task_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="2020-02-03-20-05-38"
                android:textColor="@color/black"
                android:textSize="13dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:id="@+id/adressLinearLayout">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="27dp"
                android:layout_height="23dp"
                android:src="@mipmap/a" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="放寒假的说法的数"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="7dp" />
            <TextView
                android:id="@+id/detailaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="放寒假的说法的数"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="27dp"
                android:layout_height="23dp"
                android:src="@mipmap/content" />

            <TextView
                android:id="@+id/task_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:maxLength="1000"
                android:text="放寒假的说法的数据粉红色代理费多少积分话都是就分手了开发的算法客户说代理费"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/opetation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <Button
                android:id="@+id/banlibutton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="办理记录"
                android:layout_marginLeft="240dp"
                android:background="@drawable/setbutton"/>
            />
            <Button
                android:id="@+id/pingjiabutton"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="评价信息"
                android:layout_marginLeft="15dp"
                android:background="@color/wheat"/>
            />



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/gray"
            />

    </LinearLayout>
</LinearLayout>
