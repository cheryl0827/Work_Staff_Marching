<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/iv_upload_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/me"
            app:qmui_is_circle="true" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="110dp"
            android:text=""
            android:textColor="@color/qmui_config_color_gray_1"
            android:textSize="27dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/photochange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/photo"
            android:layout_gravity="left"
            />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/tv_upload_image"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="更换头像"
            android:textColor="@color/qmui_config_color_gray_1"
            android:textSize="22dp"
            app:qmui_radius="40dp" />
        <ImageView
            android:id="@+id/imageView1111"
            android:layout_marginLeft="120dp"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            android:layout_gravity="right"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <LinearLayout
        android:id="@+id/PeopleInformatinChange"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView111"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/people"
            android:layout_gravity="left"
            />
        <TextView
            android:id="@+id/editText"
            android:layout_width="190dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="修改手机号码"
            android:textColor="@color/qmui_config_color_gray_1"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_marginLeft="80dp"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>
    <LinearLayout
        android:id="@+id/PasswordChange"
        android:layout_width="fill_parent"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView01111"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/pa"
            android:layout_gravity="left"
            />
        <TextView
            android:id="@+id/editText1"
            android:layout_width="190dp"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="重置密码"
            android:textColor="@color/qmui_config_color_gray_1"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_marginLeft="80dp"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>


    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/setbutton"
        android:text="退出程序"
        android:textColor="#808080"
        android:textSize="22dp"/>

</LinearLayout>