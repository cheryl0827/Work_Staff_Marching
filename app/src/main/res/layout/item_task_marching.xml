<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/iv_is_select"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:visibility="gone"
                    app:qmui_backgroundColor="@color/white"
                    app:qmui_borderColor="@color/black"
                    app:qmui_borderWidth="5dp"
                    app:qmui_radius="10dp" />

                <TextView
                    android:id="@+id/task_catagery"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="农村农业-土地承包经营-土地流转"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/task_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="2020-02-03-20-05-38"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:id="@+id/adressLinearLayout">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="27dp"
                android:layout_height="23dp"
                android:src="@mipmap/a" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="放寒假的说法的数"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="7dp" />
            <TextView
                android:id="@+id/detailaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="放寒假的说法的数"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="30dp" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="27dp"
                    android:layout_height="23dp"
                    android:src="@mipmap/content" />

                <TextView
                    android:id="@+id/task_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:maxLength="1000"
                    android:text="放寒假的说法的数据粉红色代理费多少积分话都是就分手了开发的算法客户说代理费"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

            </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingTop="2dp">
            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="30dp"
                android:text="所需要的工作人员数量："
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="TextView"
                android:textSize="16dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/gray" />
</LinearLayout>
